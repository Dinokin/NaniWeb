@inject SettingsManager SettingsManager

<div>
    @if (!string.IsNullOrWhiteSpace(SettingsManager.GetSetting("SiteSideBar").Value))
    {
        @Html.Raw(SettingsManager.GetSetting("SiteSideBar").Value)
    }
    else
    {
        <div class="card mb-3 bg-primary border-secondary text-center">
            <h5 class="card-header bg-primary">Example</h5>
            <div class="card-body">
                Example side bar.<br/> You can edit this inside the admin panel.
            </div>
        </div>
    }
</div>