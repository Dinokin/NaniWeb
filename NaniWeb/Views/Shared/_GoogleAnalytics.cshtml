@inject SettingsKeeper SettingsKeeper

@if (bool.Parse(SettingsKeeper.GetSetting("EnableGoogleAnalytics").Value))
{
    <script async src="https://www.googletagmanager.com/gtag/js?id=@SettingsKeeper.GetSetting("GoogleAnalyticsTrackingCode").Value"></script>
    <script>
        window.dataLayer = window.dataLayer || [];

        function gtag() { dataLayer.push(arguments); }

        gtag("js", new Date());

        gtag("config", "@SettingsKeeper.GetSetting("GoogleAnalyticsTrackingCode").Value");
    </script>
}