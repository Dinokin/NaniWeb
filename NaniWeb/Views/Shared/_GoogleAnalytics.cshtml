@inject SettingsManager SettingsManager

@if (bool.Parse(SettingsManager.GetSetting("EnableGoogleAnalytics").Value))
{
    <script async src="https://www.googletagmanager.com/gtag/js?id=@SettingsManager.GetSetting("GoogleAnalyticsTrackingCode").Value"></script>
    <script>
        window.dataLayer = window.dataLayer || [];

        function gtag() { dataLayer.push(arguments); }

        gtag("js", new Date());

        gtag("config", "@SettingsManager.GetSetting("GoogleAnalyticsTrackingCode").Value");
    </script>
}