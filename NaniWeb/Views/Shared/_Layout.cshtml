@inject SettingsKeeper SettingsKeeper

@{
    ViewData["SiteName"] = SettingsKeeper.GetSetting("SiteName").Value;
    ViewData["SiteDescription"] = SettingsKeeper.GetSetting("SiteDescription").Value;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    @if (ViewData["AllowIndexing"] == null || !(bool) ViewData["AllowIndexing"])
    {
        <meta name="robots" content="noindex, nofollow">
    }
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="@ViewData["SiteDescription"]">
    <title>@ViewData["Title"]@(ViewData["TitleSeparator"] ?? " - ")@ViewData["SiteName"]</title>
    <link rel="icon" href="~/assets/icon.png">
    <link rel="stylesheet" href="~/libs/css/bootstrap.min.css?v=1"/>
    <link rel="stylesheet" href="~/libs/css/site.css?v=2"/>
    <link rel="manifest" href="/manifest.json">
    <partial name="_AdsHeaderCode"/>
    @await RenderSectionAsync("Header", false)
</head>
<body class="bg-primary text-white">
@RenderBody()
<div style="height: 100px"></div>
<partial name="_Footer"/>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
<script src="~/libs/js/site.js?v=2"></script>
@await RenderSectionAsync("Body", false)
</body>
</html>