@inject SettingsKeeper SettingsKeeper;

@{
    ViewData["Title"] = "Contact";
}

@section Header
{
    <partial name="_GoogleAnalytics"/>
}

<partial name="_HomeNav"/>

<div class="container mt-3">
    <div class="row">
        <div class="col-lg-8">
            <div class="card bg-secondary border-light mb-3">
                <h5 class="card-header bg-secondary">About Us</h5>
                <div class="card-body">
                    @Html.Raw(SettingsKeeper.GetSetting("SiteAboutPage").Value)
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <partial name="_SidePanel"/>
        </div>
    </div>
</div>

@section Body
{
    <script>
        $("#about").addClass("active");
    </script>
}