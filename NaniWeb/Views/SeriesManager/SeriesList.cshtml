@using NaniWeb.Data

@{
    ViewData["Title"] = "Series";
    var series = (Series[]) ViewData["Series"];
}

<partial name="_AdminNav"/>

<div class="container mt-5">
    <div class="card bg-primary border-secondary">
        <h5 class="card-header bg-primary">Series</h5>
        <div class="card-body">
            <div class="row text-center text-nowrap mb-2">
                <div class="col-7">
                    <strong>Name</strong>
                </div>
                <div class="col-5">
                    <strong>Actions</strong>
                </div>
            </div>
            @foreach (var seriesItem in series)
            {
                <div class="row text-center text-nowrap mb-1">
                    <div class="col-7 my-auto">
                        <a href="@Url.Action("List", "ChapterManager", new {id = seriesItem.Id})">@seriesItem.Name</a>
                    </div>
                    <div class="col-5">
                        <div class="btn-group btn-block" role="group" aria-label="Actions">
                            <a class="btn btn-success w-100" href="@Url.Action("Add", "ChapterManager", new {id = seriesItem.Id})">Add chapter</a>
                            <a class="btn btn-warning w-100" href="@Url.Action("Edit", new {id = seriesItem.Id})">Edit</a>
                            <a class="btn btn-danger w-100 delete-series" href="@Url.Action("Delete", new {id = seriesItem.Id})">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div id="delete_modal" class="modal text-dark">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Are you sure?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure that you want to permanently delete this series?</p>
                </div>
                <div class="modal-footer">
                    <button id="confirm_delete" type="button" class="btn btn-danger">Delete</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Body
{
    <script>
        var address = null;

        $(function() {
            $("#series").addClass("active");
        });

        $(".delete-series").click(function(event) {
            event.preventDefault();
            $("#delete_modal").modal("show");
            address = $(this).attr("href");
        });

        $("#confirm_delete").click(function() {
            window.location = address;
        });
    </script>
}