@model FcmForm

@{
    ViewData["Title"] = "FCM - Settings";
}

<partial name="_AdminNav"/>

<div class="container mt-3">
    <div class="card bg-secondary border-light">
        <h5 class="card-header bg-secondary">Settings</h5>
        <div class="card-body">
            @if (TempData["Error"] != null && (bool) TempData["Error"])
            {
                <div class="alert alert-dismissible alert-danger">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    Something went wrong. Please check your data and try again.
                </div>
            }
            else if (TempData["Error"] != null && !(bool) TempData["Error"])
            {
                <div class="alert alert-dismissible alert-success">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    Settings saved successfully.
                </div>
            }
            <form id="fcm_settings_form" enctype="multipart/form-data" asp-controller="SettingsManager" asp-action="Fcm" novalidate>
                <fieldset>
                    <legend>FCM Settings</legend>
                    <div class="form-group">
                        <div class="form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" aria-describedby="enable_fcm_help" id="enable_fcm" asp-for="EnableFcm"/>Enable FCM
                            </label>
                        </div>
                        <small id="enable_fcm_help" class="form-text text-muted">Enable Firebase Cloud Messaging push notifications.</small>
                    </div>
                    <div class="form-group">
                        <label for="fcm_api_key">Firebase Api Key</label>
                        <input class="form-control" id="fcm_api_key" asp-for="FcmApiKey" aria-describedby="fcm_api_key_help" placeholder="Firebase Api Key">
                        <small id="fcm_api_key_help" class="form-text text-muted">Your Firebase's Api Key.</small>
                    </div>
                    <div class="form-group">
                        <label for="fcm_project_id">Firebase Project ID</label>
                        <input class="form-control" id="fcm_project_id" asp-for="FcmProjectId" aria-describedby="fcm_project_id_help" placeholder="Firebase Project ID">
                        <small id="fcm_project_id_help" class="form-text text-muted">Your Firebase's Project ID.</small>
                    </div>
                    <div class="form-group">
                        <label for="fcm_sender_id">FCM Sender ID</label>
                        <input class="form-control" id="fcm_sender_id" asp-for="FcmSenderId" aria-describedby="fcm_sender_id_help" placeholder="FCM Sender ID">
                        <small id="fcm_sender_id_help" class="form-text text-muted">Your Firebase Cloud Messaging Sender ID.</small>
                    </div>
                    <div class="form-group">
                        <div class="input-group" aria-describedby="fcm_file_help">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="fcm_key" accept=".json" asp-for="FcmKeyFile">
                                <label class="custom-file-label" for="fcm_key" id="fcm_key_label">Choose file</label>
                            </div>
                        </div>
                        <small id="fcm_file_help" class="form-text text-muted">A key file. Downloadable from your Firebase's project console.</small>
                    </div>
                </fieldset>
                <div>
                    <button class="btn btn-success float-right mt-3" id="submit" type="submit">Save Settings</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Body
{
    <script>
        $("#settings").addClass("active");

        $("#fcm_key").change(function(event) {
            const file = event.target.files[0].name;
            $("#fcm_key_label").text(file);
        });
    </script>
}