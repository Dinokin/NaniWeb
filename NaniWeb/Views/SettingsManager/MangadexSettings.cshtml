@model MangadexForm

@{
    ViewData["Title"] = "Mangadex - Settings";
}

<partial name="_AdminNav"/>

<div class="container">
    <div class="card mt-5">
        <h5 class="card-header">Settings</h5>
        <div class="card-body">
            @if (TempData["Error"] != null && (bool) TempData["Error"])
            {
                <div class="alert alert-dismissible alert-danger text-center">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    Something went wrong. Please check your data and try again.
                </div>
            }
            else if (TempData["Error"] != null && !(bool) TempData["Error"])
            {
                <div class="alert alert-dismissible alert-success text-center">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    Settings saved successfully.
                </div>
            }
            <form id="mangadex_settings_form" asp-controller="SettingsManager" asp-action="Mangadex" novalidate>
                <fieldset>
                    <legend>Mangadex settings</legend>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" id="enable_mangadex_auto_upload" asp-for="EnableMangadexAutoUpload"/>Enable mangadex auto upload
                        </label>
                    </div>
                    <div class="form-group">
                        <label for="mangadex_user">Mangadex user</label>
                        <input class="form-control" id="mangadex_user" asp-for="MangadexUser" aria-describedby="mangadex_user_help" placeholder="Mangadex user">
                        <small id="mangadex_user_help" class="form-text text-muted">The username that will be used to connect to mangadex.</small>
                    </div>
                    <div class="form-group">
                        <label for="mangadex_password">Mangadex password</label>
                        <input class="form-control" id="mangadex_password" asp-for="MangadexPassword" aria-describedby="mangadex_password_help" placeholder="Mangadex password">
                        <small id="mangadex_password_help" class="form-text text-muted">The password of the user that will be used to connect to mangadex.</small>
                    </div>
                    <div class="form-group">
                        <label for="mangadex_group_id">Channel group ID</label>
                        <input class="form-control" id="mangadex_group_id" asp-for="MangadexGroupId" aria-describedby="mangadex_group_id_help" placeholder="Mangadex group ID">
                        <small id="mangadex_group_id_help" class="form-text text-muted">The ID of the group that the chapters belong to.</small>
                    </div>
                </fieldset>
                <div>
                    <button class="btn btn-success float-right mt-3" id="submit" type="submit">Save settings</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Body
{
    <script>
        $(function() {
            $("#settings").addClass("active");
        });
    </script>
}