@model GeneralForm

@{
    ViewData["Title"] = "General - Settings";
}

<partial name="_AdminNav"/>

<div class="container">
    <div class="card bg-primary border-secondary mt-5">
        <h5 class="card-header bg-primary">Settings</h5>
        <div class="card-body">
            @if (TempData["Error"] != null && (bool) TempData["Error"])
            {
                <div class="alert alert-dismissible alert-danger">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    Something went wrong. Please check your data and try again.
                </div>
            }
            else if (TempData["Error"] != null && !(bool) TempData["Error"])
            {
                <div class="alert alert-dismissible alert-success">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    Settings saved successfully.
                </div>
            }
            <form id="general_settings_form" asp-controller="SettingsManager" asp-action="General" novalidate>
                <fieldset>
                    <legend>General settings</legend>
                    <div class="form-group">
                        <div class="form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" id="enable_registration" asp-for="EnableRegistration"/>Enable registration
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="site_name">Site name</label>
                        <input class="form-control" id="site_name" asp-for="SiteName" aria-describedby="site_name_help" placeholder="Site name">
                        <small id="site_name_help" class="form-text text-muted">The name of your website.</small>
                    </div>
                    <div class="form-group">
                        <label for="site_description">Site description</label>
                        <input class="form-control" id="site_description" asp-for="SiteDescription" aria-describedby="site_description_help" placeholder="Site description">
                        <small id="site_description_help" class="form-text text-muted">The description of your website. This will appear in search engines.</small>
                    </div>
                    <div class="form-group">
                        <label for="site_url">Site URL</label>
                        <input class="form-control" id="site_url" asp-for="SiteUrl" aria-describedby="site_url_help" placeholder="Email address">
                        <small id="site_url_help" class="form-text text-muted">Your website's url without trailing slashes. ex: https://google.com, https://mangadex.org</small>
                    </div>
                </fieldset>
                <div>
                    <button class="btn btn-success float-right mt-3" id="submit" type="submit">Save settings</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Body
{
    <script>
        $(function() {
            $("#settings").addClass("active");
        });
    </script>
}