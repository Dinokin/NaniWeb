@model GoogleAnalyticsForm

@{
    ViewData["Title"] = "Google Analytics - Settings";
}

<partial name="_AdminNav"/>

<div class="container">
    <div class="card mt-5">
        <h5 class="card-header">Settings</h5>
        <div class="card-body">
            @if (TempData["Error"] != null && (bool) TempData["Error"])
            {
                <div class="alert alert-dismissible alert-danger text-center">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    Something went wrong. Please check your data and try again.
                </div>
            }
            else if (TempData["Error"] != null && !(bool) TempData["Error"])
            {
                <div class="alert alert-dismissible alert-success text-center">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    Settings saved successfully.
                </div>
            }
            <form id="google_analytics_settings_form" asp-controller="SettingsManager" asp-action="GoogleAnalytics" novalidate>
                <fieldset>
                    <legend>Google Analytics settings</legend>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" id="enable_google_analytics" asp-for="EnableGoogleAnalytics"/>Enable google analytics
                        </label>
                    </div>
                    <div class="form-group">
                        <label for="google_analytics_tracking_code">Mangadex user</label>
                        <input class="form-control" id="google_analytics_tracking_code" asp-for="GoogleAnalyticsTrackingCode" aria-describedby="google_analytics_tracking_code_help" placeholder="Google Analytics tracking code">
                        <small id="google_analytics_tracking_code_help" class="form-text text-muted">The code used by google analytics to identify your website.</small>
                    </div>
                </fieldset>
                <div>
                    <button class="btn btn-success float-right mt-3" id="submit" type="submit">Save settings</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Body
{
    <script>
        $(function() {
            $("#settings").addClass("active");
        });
    </script>
}