@using NaniWeb.Data

@{
    var announcements = (Announcement[]) ViewData["Announcements"];
    ViewData["Title"] = "Announcements";
}

<partial name="_AdminNav"/>

<div class="container mt-5">
    <div class="card bg-primary border-secondary">
        <h5 class="card-header bg-primary">Announcements</h5>
        <div class="card-body">
            <div class="row text-center text-nowrap mb-2">
                <div class="col-7">
                    <p>
                        <strong>Title</strong>
                    </p>
                </div>
                <div class="col-5">
                    <p>
                        <strong>Actions</strong>
                    </p>
                </div>
            </div>
            @foreach (var announcement in announcements)
            {
                <div class="row text-center text-nowrap">
                    <div class="col-7">
                        <p class="mt-2">@announcement.Title</p>
                    </div>
                    <div class="col-5">
                        <div class="btn-group btn-block" role="group" aria-label="Actions">
                            <a class="btn btn-warning w-100" href="@Url.Action("Edit", new {id = announcement.Id})">Edit</a>
                            <a class="btn btn-danger w-100 delete-announcement" href="@Url.Action("Delete", new {id = announcement.Id})">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div id="delete_modal" class="modal text-dark">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Are you sure?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure that you want to permanently delete this announcement?</p>
                </div>
                <div class="modal-footer">
                    <button id="confirm_delete" type="button" class="btn btn-danger">Delete</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Body
{
    <script>
        var address = null;

        $(function() {
            $("#announcements").addClass("active");
        });

        $(".delete-announcement").click(function(event) {
            event.preventDefault();
            $("#delete_modal").modal("show");
            address = $(this).attr("href");
        });

        $("#confirm_delete").click(function() {
            window.location = address;
        });
    </script>
}